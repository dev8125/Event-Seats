<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.persistence" transaction-type="RESOURCE_LOCAL"> <!-- trans-type JTA=Java EE, RESOURCE = Java SE -->
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>Customer</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jbdcDriver"/>
            <property name="hibernate.connection.url" value="jdbc:hsqldb:hsql://localhost:8080"/>
            <property name="hibernate.connection.username" value="event"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.max_fetch_depth" value="3"/>
        </properties>
    </persistence-unit>
</persistence>