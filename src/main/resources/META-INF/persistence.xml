<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
        <persistence-unit name="com.persistence" transaction-type="RESOURCE_LOCAL">
        <!-- trans-type JTA=Java EE, RESOURCE = Java SE -->
        <!--<provider>org.hibernate.ejb.HibernatePersistence</provider>-->
        <provider> org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.ticketmaster.event.model.Seat</class>
        <class>com.ticketmaster.event.repositories.SeatRepository</class>
        <properties>
            <!--<property name="hibernate.connection.driver_class" value="org.hsqldb.jbdc.Driver"/>-->
            <!--<property name="hibernate.connection.url" value="jdbc:hsqldb:hsql://localhost:8080"/>-->
            <property name="hibernate.connection.username" value="event"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>